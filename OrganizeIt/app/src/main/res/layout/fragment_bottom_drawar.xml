<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constlay"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".bottomDrawarFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/imageView"
        android:contentDescription="camera"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:src="@drawable/baseline_camera_alt_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/files"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="files"
        android:src="@drawable/baseline_file_open_24"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:text="Camera"
        android:textAlignment="center"
        android:textStyle="bold|normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/file"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"

        android:text="Files"
        android:textAlignment="center"
        android:textStyle="bold|normal"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/files" />

    <ImageView
        android:id="@+id/captured"
        android:layout_width="70dp"
        android:layout_height="74dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/files"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>